{
  "AWSEBDockerrunVersion": "2",
  "volumes": [
    {
      "name": "mongodata",
      "host": {
        "sourcePath": "/var/app/current"
      }
    }
  ],
  "containerDefinitions": [
    {
      "name": "api",
      "image": "mitchrule/danksongs-api",
      "essential": true,
      "memory": 256,
      "portMappings": [
        {
          "hostPort": 8080,
          "containerPort": 8080
        }
      ],
      "links": ["mongo"]
    },
    {
      "name": "mongo",
      "image": "mongo:latest",
      "essential": true,
      "memory": 512,
      "portMappings": [
        {
          "hostPort": 27017,
          "containerPort": 27017
        }
      ],
      "mountPoints": [
        {
          "sourceVolume": "mongodata",
          "containerPath": "/data/db",
          "readOnly": false
        }
      ]
    },
    {
      "name": "ui",
      "image": "mitchrule/danksongs-ui",
      "essential": true,
      "memory": 256,
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 3000
        }
      ],
      "links": ["api"]
    }
  ]
}
