{
  "AWSEBDockerrunVersion": "2",
  "containerDefinitions": [
    {
      "essential": true,
      "image": "mitchrule/danksongs-api",
      "links": ["mongo"],
      "memory": 128,
      "name": "api",
      "portMappings": [
        {
          "containerPort": 8080,
          "hostPort": 8080
        }
      ]
    },
    {
      "essential": true,
      "image": "mongo:latest",
      "memory": 256,
      "mountPoints": [
        {
          "containerPath": "/data/db",
          "sourceVolume": "_Mongodata"
        }
      ],
      "name": "mongo",
      "portMappings": [
        {
          "containerPort": 27017,
          "hostPort": 27017
        }
      ]
    },
    {
      "essential": true,
      "image": "mongo-express",
      "memory": 128,
      "name": "mongo-express",
      "portMappings": [
        {
          "containerPort": 8081,
          "hostPort": 8081
        }
      ]
    },
    {
      "essential": true,
      "image": "mitchrule/danksongs-ui",
      "links": ["api"],
      "memory": 128,
      "name": "ui",
      "portMappings": [
        {
          "containerPort": 3000,
          "hostPort": 80
        }
      ]
    }
  ],
  "family": "",
  "volumes": [
    {
      "host": {
        "sourcePath": "./mongodata"
      },
      "name": "_Mongodata"
    }
  ]
}
